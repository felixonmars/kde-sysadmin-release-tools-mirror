#!/bin/bash -x 

for i in `cat modules`; do

(
case $i in
  arts)
    tag=ARTS_1_3_0_BETA_2
    ;;
  *)
    tag=KDE_3_3_0_BETA_2
    ;;
esac

cd clean
cvscheck -mucra $i | xargs rm -f
cvs update $i
if test "$i" = "kde-i18n"; then
  cp ../language_list $i/subdirs 
fi
../removestuff $i
cvs rtag -d $tag $i 
cvs tag $tag $i
)
done
