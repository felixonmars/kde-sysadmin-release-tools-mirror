echo '<table border="0" cellpadding="4" cellspacing="0">'
echo '<tr valign="top">'
echo '  <th align="left">Location</th>'
echo '  <th align="left">Size</th>'
echo '  <th align="left">Sha1 Sum</th>'
echo '</tr>'

for i in *.tar.xz; do 
    echo '<tr valign="top">'
    l=`echo $i | sed -e "s#.tar.xz##"`
    echo '   <td><a href="http://download.kde.org/stable/4.9.0/src/'$i'">'$l'</a></td>'
    size=`stat -c "%s" $i`
    size=`echo "$size / 1024" | bc`
    if test "$size" -lt 1024; then
      size="$size"kB
    else
      size=`echo "($size * 10) / 1024" | bc`
      if test "$size" -lt 100; then
        size=`echo "$size"MB | sed -e "s#\(.\)MB#.\1MB#"`
      else
        size=`echo "$size"MB | sed -e "s#\(.\)MB#MB#"`
      fi
    fi
    echo '   <td align="right">'$size'</td>'
    sha1=`sha1sum $i | cut -f1 -d' '`
    echo '   <td><tt>'$sha1'</tt></td>'
    echo '</tr>'
    echo ''
done
 
echo '</table>'

